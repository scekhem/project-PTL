<Window
    x:Class="MwTrainTemplate.Component.MarkLocation.View.MarkLocationSaveView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="http://www.maxwell.com/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mw="http://www.maxwell-gp.com/"
    MinWidth="500"
    MinHeight="400"
    MaxWidth="500"
    MaxHeight="400"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    VerticalContentAlignment="Stretch"
    ResizeMode="NoResize"
    StateChanged="{mw:Action OnwinStateChanged}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu>
            <!--<MenuItem Header="打开" FontSize="18"  Click="{mw:Action FromFile }" >
                <MenuItem.Icon>
                    <Image Source="/Module.SVA;component/Resources/bmpfiles.ico" />
                </MenuItem.Icon>
            </MenuItem>-->
            <MenuItem
                Click="{mw:Action Save}"
                FontSize="18"
                Header="Save">
                <!--<MenuItem.Icon>
                -->
                <!--<Image Source="/Module.SVA;component/Resources/SaveFile.ico" />-->
                <!--
                </MenuItem.Icon>-->
            </MenuItem>
            <TextBlock
                FontSize="18"
                IsEnabled="False"
                Text="Template Name:" />

            <!--<mw:HitTextBox
                Visibility="Hidden"
                Width="250"
                mw:InfoElement.Necessary="True"
                 mw:InfoElement.RegexPattern="^[a-zA-Z0-9_\u4e00-\u9fa5]{1,50}$"
                FontSize="15"
                FontWeight="Bold"
                IsEnabled="False"
                Text="{Binding FileName}"
                TextType="Chinese"
                TextWrapping="WrapWithOverflow"
                ToolTip="模板名称（中文、英文、数字、下划线组合，1-50位）" 
                ResultType="None"/>-->

            <TextBox
                Width="250"
                FontSize="15"
                FontWeight="Bold"
                IsEnabled="False"
                Text="{Binding FileName}"
                ToolTip="模板名称（中文、英文、数字、下划线组合，1-50位）"/>

        </Menu>
        <Image
            Grid.Row="1"
            Source="{Binding TemplateBmp}"
            Stretch="Uniform" />
    </Grid>
</Window>
