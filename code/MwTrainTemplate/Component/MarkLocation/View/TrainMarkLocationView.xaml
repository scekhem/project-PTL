<Window x:Class="MwTrainTemplate.Component.MarkLocation.View.TrainMarkLocationView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:control="http://www.maxwell.com/controls"
            xmlns:converter="clr-namespace:MwFramework.Controls.UIControl;assembly=MwFramework.Controls.UIControl"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:mw="http://www.maxwell-gp.com/"
            xmlns:common="clr-namespace:MwTrainTemplate.Common"
            Title="TemplateView"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            d:DesignHeight="1350"
            d:DesignWidth="1800"
            WindowStartupLocation="CenterScreen"
            mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="visiableConverter" />
        <Style x:Key="GroupBoxSecondaryExt" TargetType="GroupBox">
            <Setter Property="Padding" Value="5,5" />
            <Setter Property="Margin" Value="3,5,3,0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <common:ComboxConverter x:Key="ComboxConver" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
            <StackPanel Margin="10,0,0,0" Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center" FontSize="16">
                    Low Level Maintenance
                </TextBlock>
                <Label
                    VerticalAlignment="Center"
                    Content="Train"
                    ContentStringFormat="&gt; {0}"
                    FontSize="16" />
            </StackPanel>
        </Border>
        <Viewbox
            x:Name="LeftRegion"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Stretch="Uniform">
            <control:DesignPanel
                x:Name="cameraPanel"
                Width="1350"
                Height="970"
                MotorX="{Binding MotorX}"
                MotorY="{Binding MotorY}"
                MotorZ="{Binding MotorTH}"
                Source="{Binding ContinuousImage}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <i:InvokeCommandAction Command="{Binding cameraPanelRight_MouseLeftButtonDown}" CommandParameter="{Binding ElementName=cameraPanel}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="MouseLeftButtonUp">
                        <i:InvokeCommandAction Command="{Binding cameraPanelRight_MouseLeftButtonUp}" CommandParameter="{Binding ElementName=cameraPanel}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="OnSourceChange">
                        <i:InvokeCommandAction Command="{Binding cameraPanelRight_OnSourceChange}" CommandParameter="{Binding ElementName=cameraPanel}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="OnMouseMove">
                        <i:InvokeCommandAction Command="{Binding cameraPanelRight_OnMouseMove}" CommandParameter="{Binding ElementName=cameraPanel}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="ReportItemSelected">
                        <i:InvokeCommandAction Command="{Binding cameraPanelRight_ReportItemSelected}" CommandParameter="{Binding ElementName=cameraPanel}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>

            </control:DesignPanel>
        </Viewbox>
        <Border
            x:Name="RightRegion"
            Grid.Row="1"
            Grid.Column="1"
            BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Expander
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Gray"
                        BorderBrush="AliceBlue"
                        BorderThickness="5"
                        ExpandDirection="Down"
                        IsExpanded="{Binding SelectedExpander1, Mode=TwoWay}"
                        SnapsToDevicePixels="True">
                        <Expander.Header>
                            <TextBlock
                                Width="100"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Source"
                                TextWrapping="Wrap" />
                        </Expander.Header>
                        <Expander.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Button
                                    Grid.Row="0"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Command="{mw:Action AcquiredImage}"
                                    Content="Acquire Image" />
                                <Button
                                    Grid.Row="1"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Command="{mw:Action LoadImageFromFile}"
                                    Content="From File" />
                            </Grid>
                        </Expander.Content>
                    </Expander>
                    <Expander
                        x:Name="RegionExpander"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Gray"
                        BorderBrush="AliceBlue"
                        BorderThickness="5"
                        ExpandDirection="Down"
                        IsExpanded="{Binding SelectedExpander2, Mode=TwoWay}"
                        SnapsToDevicePixels="True">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Expanded">
                                <i:InvokeCommandAction Command="{Binding regionExpanded}" CommandParameter="{Binding ElementName=RegionExpander}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Expander.Header>
                            <TextBlock
                                Width="100"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Region"
                                TextWrapping="Wrap" />
                        </Expander.Header>
                        <Expander.Content>
                            <GroupBox
                                Grid.ColumnSpan="2"
                                BorderThickness="3"
                                FontSize="18"
                                Style="{StaticResource GroupBoxSecondaryExt}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0"
                                            Orientation="Vertical">
                                            <Button
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Command="{mw:Action SetRegionUp}"
                                                Content="Up" />
                                            <Grid>

                                                <Button
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Command="{mw:Action SetRegionLeft}"
                                                    Content="Left" />
                                                <Button
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom"
                                                    Command="{mw:Action SetRegionRight}"
                                                    Content="Right" />
                                            </Grid>
                                            <Button
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Bottom"
                                                Command="{mw:Action SetRegionDown}"
                                                Content="Down" />

                                        </StackPanel>
                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <GroupBox
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Height="100"
                                                BorderThickness="2"
                                                FontSize="20"
                                                Header="Mode"
                                                Style="{StaticResource GroupBoxSecondaryExt}">
                                                <WrapPanel Orientation="Horizontal">
                                                    <RadioButton
                                                        x:Name="RegionModeMove"
                                                        Margin="30,5,0,0"
                                                        VerticalContentAlignment="Center"
                                                        Content="Move"
                                                        FontSize="19"
                                                        IsChecked="{Binding SetRegionModeMove}" />
                                                    <RadioButton
                                                        x:Name="RegionModeResize"
                                                        Margin="50,5,0,0"
                                                        VerticalContentAlignment="Center"
                                                        Content="Resize"
                                                        FontSize="19"
                                                        IsChecked="{Binding SetRegionModeResize}" />
                                                </WrapPanel>
                                            </GroupBox>
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                Visibility="{Binding ElementName=RegionModeMove, Path=IsChecked, Converter={StaticResource visiableConverter}}">
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Step Width" />
                                                <Slider
                                                    Width="200"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="10"
                                                    Minimum="0.1"
                                                    Style="{StaticResource TextBoxSlider}"
                                                    TickFrequency="0.1"
                                                    Value="{Binding StepWidth}" />
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                Visibility="{Binding ElementName=RegionModeResize, Path=IsChecked, Converter={StaticResource visiableConverter}}">
                                                <TextBlock
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Scale" />
                                                <Slider
                                                    Width="200"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="2"
                                                    Minimum="0.1"
                                                    Style="{StaticResource TextBoxSlider}"
                                                    TickFrequency="0.1"
                                                    Value="{Binding Scale}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="ValueChanged">
                                                            <i:InvokeCommandAction Command="{Binding cmbScaleSelectionChanged}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Slider>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="0" Margin="5,5,5,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <WrapPanel 
                                        Grid.Column="0" 
                                        Grid.Row="1" 
                                        Orientation="Horizontal">
                                            <TextBlock
                                            Margin="60,5,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="19"
                                            FontStyle="Normal"
                                            Text="X" />
                                            <TextBlock
                                            Margin="130,5,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="19"
                                            FontStyle="Normal"
                                            Text="Y" />
                                            <TextBox
                                            x:Name="SetX"
                                            Width="80"
                                            Height="30"
                                            Margin="30,5,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsReadOnly="True"
                                            Text="{Binding SetRegionX}" />
                                            <TextBox
                                            x:Name="SetY"
                                            Width="80"
                                            Height="30"
                                            Margin="60,5,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsReadOnly="True"
                                            Text="{Binding SetRegionY}" />
                                        </WrapPanel>
                                        <WrapPanel
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Orientation="Horizontal">
                                            <TextBlock
                                            Margin="50,5,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="19"
                                            FontStyle="Normal"
                                            Text="Width" />
                                            <TextBlock
                                            Margin="80,5,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="19"
                                            FontStyle="Normal"
                                            Text="Height" />
                                            <TextBox
                                            x:Name="SetWidth"
                                            Width="80"
                                            Height="30"
                                            Margin="40,5,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsReadOnly="True"
                                            Text="{Binding SetRegionWidth}" />
                                            <TextBox
                                            x:Name="SetHeight"
                                            Width="80"
                                            Height="30"
                                            Margin="60,5,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsReadOnly="True"
                                            Text="{Binding SetRegionHeight}" />
                                        </WrapPanel>
                                    </Grid>

                                    <Grid Grid.Row="2" Grid.Column="0" Margin="5,5,5,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Grid.Row="0"
                                            Command="{mw:Action SetRegion}"
                                            Content="Set" />
                                        <Button Grid.Column="1" Grid.Row="0"
                                            Command="{mw:Action ClearRegion}"
                                            Content="Clear" />
                                    </Grid>
                                </Grid>
                            </GroupBox>
                        </Expander.Content>
                    </Expander>
                    <Expander
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Gray"
                        BorderBrush="AliceBlue"
                        BorderThickness="5"
                        ExpandDirection="Down"
                        IsExpanded="{Binding SelectedExpander3, Mode=TwoWay}"
                        SnapsToDevicePixels="True">
                        <Expander.Header>
                            <TextBlock
                                Width="200"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Train don't care"
                                TextWrapping="Wrap" />
                        </Expander.Header>
                        <Expander.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <GroupBox
                                        Grid.Row="0"
                                        BorderThickness="3"
                                        FontSize="18"
                                        Header="{Binding Navigation}"
                                        Style="{StaticResource GroupBoxSecondaryExt}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Orientation="Vertical">
                                                <Button
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Command="{mw:Action SetRegionUp}"
                                                    Content="Up" />
                                                <Grid>

                                                    <Button
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Command="{mw:Action SetRegionLeft}"
                                                        Content="Left" />
                                                    <Button
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Command="{mw:Action SetRegionRight}"
                                                        Content="Right" />
                                                </Grid>
                                                <Button
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Bottom"
                                                    Command="{mw:Action SetRegionDown}"
                                                    Content="Down" />

                                            </StackPanel>
                                            <Grid Grid.Row="0" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <GroupBox Grid.Column="0"
                                                Height="100"
                                                BorderThickness="2"
                                                FontSize="20"
                                                Header="Mode"
                                                Style="{StaticResource GroupBoxSecondaryExt}">
                                                    <WrapPanel Orientation="Horizontal">
                                                        <RadioButton
                                                        x:Name="TrainDontModeMove"
                                                        Margin="30,5,0,0"
                                                        VerticalContentAlignment="Center"
                                                        Content="Move"
                                                        FontSize="19"
                                                        IsChecked="{Binding SetRegionModeMove}" />
                                                        <RadioButton
                                                        x:Name="TrainDontModeResize"
                                                        Margin="50,5,0,0"
                                                        VerticalContentAlignment="Center"
                                                        Content="Resize"
                                                        FontSize="19"
                                                        IsChecked="{Binding SetRegionModeResize}" />
                                                    </WrapPanel>
                                                </GroupBox>
                                                <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                Visibility="{Binding ElementName=TrainDontModeMove, Path=IsChecked, Converter={StaticResource visiableConverter}}">
                                                    <TextBlock
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Step Width" />
                                                    <Slider
                                                    Width="200"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="1"
                                                    Minimum="0.1"
                                                    Style="{StaticResource TextBoxSlider}"
                                                    TickFrequency="0.1"
                                                    Value="{Binding StepWidth, Mode=TwoWay}" />

                                                </StackPanel>
                                                <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Orientation="Vertical"
                                                Visibility="{Binding ElementName=TrainDontModeResize, Path=IsChecked, Converter={StaticResource visiableConverter}}">
                                                    <TextBlock
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Scale" />
                                                    <Slider
                                                    Width="200"
                                                    IsSnapToTickEnabled="True"
                                                    Maximum="2"
                                                    Minimum="0.1"
                                                    Style="{StaticResource TextBoxSlider}"
                                                    TickFrequency="0.1"
                                                    Value="{Binding Scale, Mode=TwoWay}">
                                                        <i:Interaction.Triggers>
                                                            <i:EventTrigger EventName="ValueChanged">
                                                                <i:InvokeCommandAction Command="{Binding cmbScaleSelectionChanged}" />
                                                            </i:EventTrigger>
                                                        </i:Interaction.Triggers>
                                                    </Slider>
                                                </StackPanel>
                                            </Grid>
                                            <WrapPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="60,5,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="X" />
                                                <TextBlock
                                                    Margin="130,5,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Y" />
                                                <TextBox
                                                    x:Name="SetCareX"
                                                    Width="80"
                                                    Height="30"
                                                    Margin="30,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding SetRegionX}" />
                                                <TextBox
                                                    x:Name="SetCareY"
                                                    Width="80"
                                                    Height="30"
                                                    Margin="60,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding SetRegionY}" />
                                            </WrapPanel>
                                            <WrapPanel
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="50,5,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Width" />
                                                <TextBlock
                                                    Margin="80,5,0,0"
                                                    VerticalAlignment="Center"
                                                    FontSize="19"
                                                    FontStyle="Normal"
                                                    Text="Height" />
                                                <TextBox
                                                    x:Name="SetCareWidth"
                                                    Width="80"
                                                    Height="30"
                                                    Margin="40,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding SetRegionWidth}" />
                                                <TextBox
                                                    x:Name="SetCareHeight"
                                                    Width="80"
                                                    Height="30"
                                                    Margin="60,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    IsReadOnly="True"
                                                    Text="{Binding SetRegionHeight}" />
                                            </WrapPanel>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox
                                        Grid.Row="1"
                                        Height="100"
                                        BorderThickness="3"
                                        FontSize="20"
                                        Header="Pixel Mask Mode"
                                        Style="{StaticResource GroupBoxSecondaryExt}">
                                        <WrapPanel Orientation="Horizontal">
                                            <RadioButton
                                                Margin="30,5,0,0"
                                                VerticalContentAlignment="Center"
                                                Content="Inner"
                                                FontSize="19"
                                                IsChecked="{Binding SetInnerMaskMode}" />
                                            <RadioButton
                                                Margin="50,5,0,0"
                                                VerticalContentAlignment="Center"
                                                Content="Outer"
                                                FontSize="19"
                                                IsChecked="{Binding SetOuterMaskMode}" />
                                        </WrapPanel>
                                    </GroupBox>
                                </Grid>
                                <WrapPanel Grid.Row="2" Orientation="Horizontal">
                                    <Button
                                        Margin="70,0,0,0"
                                        Command="{mw:Action SetTrain}"
                                        Content="Set" />
                                    <Button
                                        Margin="70,0,0,0"
                                        Command="{mw:Action ClearTrain}"
                                        Content="Clear" />
                                    <Button
                                        Margin="70,0,0,0"
                                        Command="{mw:Action ClearAllTrain}"
                                        Content="ClearAll" />
                                </WrapPanel>
                            </Grid>
                        </Expander.Content>
                    </Expander>
                    <Expander
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Background="Gray"
                        BorderBrush="AliceBlue"
                        BorderThickness="5"
                        ExpandDirection="Down"
                        IsExpanded="{Binding SelectedExpander4, Mode=TwoWay}"
                        SnapsToDevicePixels="True">
                        <Expander.Header>
                            <TextBlock
                                Width="100"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="Origin"
                                TextWrapping="Wrap" />
                        </Expander.Header>
                        <Expander.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <GroupBox
                                    Grid.Row="0"
                                    BorderThickness="3"
                                    FontSize="18"
                                    Style="{StaticResource GroupBoxSecondaryExt}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Orientation="Vertical">
                                            <Button
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Command="{mw:Action SetOriginUp}"
                                                Content="Up" />
                                            <Grid>
                                                <Button
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Command="{mw:Action SetOriginLeft}"
                                                    Content="Left" />
                                                <Button
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    Command="{mw:Action SetOriginRight}"
                                                    Content="Right" />
                                                <Button
                                                    HorizontalAlignment="Center"
                                                    Background="IndianRed"
                                                    Command="{mw:Action AutoOrigin}" />
                                            </Grid>

                                            <Button
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Command="{mw:Action SetOriginDown}"
                                                Content="Down" />

                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Orientation="Vertical">
                                            <Slider
                                                Width="120"
                                                Margin="-10,30,0,0"
                                                IsEnabled="True"
                                                IsSnapToTickEnabled="True"
                                                LargeChange="0.01"
                                                Maximum="100"
                                                Minimum="1"
                                                TickFrequency="0.01"
                                                Visibility="Visible">
                                                <i:Interaction.Behaviors>
                                                    <converter:SliderValueChangedBehavior Value="{Binding PixelSteps, Mode=TwoWay}" />
                                                </i:Interaction.Behaviors>
                                            </Slider>
                                            <mw:NumberBox
                                                Margin="-10,10,0,0"
                                                mw:NumericKeypadAttach.IsEnabled="False"
                                                mw:ParameterAttach.IsShowOldValue="False"
                                                Increment="0.01"
                                                Maximum="100"
                                                Minimum="1"
                                                Style="{StaticResource LeftRightButtonNumberBoxStyle}"
                                                Value="{Binding PixelSteps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            <TextBlock Margin="65,10,0,0" Text="1Pixel--0.01Pixel" />
                                        </StackPanel>
                                    </Grid>
                                </GroupBox>
                                <GroupBox
                                    Grid.Row="1"
                                    BorderThickness="3"
                                    FontSize="18"
                                    Style="{StaticResource GroupBoxSecondaryExt}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="80" />
                                            <RowDefinition Height="80" />
                                            <RowDefinition Height="80" />
                                            <RowDefinition Height="80" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="Line Width:" />
                                        <Slider
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            IsEnabled="True"
                                            IsSnapToTickEnabled="True"
                                            LargeChange="1"
                                            Maximum="1500"
                                            Minimum="1"
                                            TickFrequency="1"
                                            Visibility="Visible"
                                            Value="{Binding LineWidth, Mode=TwoWay}">
