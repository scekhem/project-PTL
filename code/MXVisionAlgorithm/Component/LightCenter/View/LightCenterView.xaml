<UserControl x:Class="MXVisionAlgorithm.Component.LightCenter.View.LightCenterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MXVisionAlgorithm.Component.LightCenter.View"
             xmlns:drawingControl="http://www.maxwell.com/controls"
             xmlns:mw="http://www.maxwell-gp.com/"
             mc:Ignorable="d" 
             d:DesignWidth="1800" d:DesignHeight="1350" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox x:Name="ImageRegion" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Margin="5">
            <drawingControl:DesignPanel Name="ImagePanel" Width="1500" Height="1300" Source="{Binding Image}" Shapes="{Binding DrawRegions}" HorizontalVisibility="Hidden" VerticalVisibility="Hidden"></drawingControl:DesignPanel>
        </Viewbox>

        <ScrollViewer Grid.Column="1" Grid.Row="0" Margin="5" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" >
            <Grid Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Row="0" Name="CalcLineCenter" Header="CalcLineCenter">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Grid.Row ="0"  Name="Calc" Content="Calc" Click="{mw:Action Calc}" Width="150" />
                        <Label Name="LTRBResultLbl" Content="LTRBResult" Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center"></Label>
                        <TextBox Grid.Column="1" Grid.Row="1" Name="LTRBResult" Text="{Binding LTRBResult}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" IsReadOnly="True" />
                        <Button Grid.Column="2" Grid.Row="1" Name="CalcLtrb" Content="Calc" Click="{mw:Action CalcLtrb}" Width="70" />
                        <Label Name="LBRTResultLbl" Content="LBRTResult" Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Center"></Label>
                        <TextBox Grid.Column="1" Grid.Row="2" Name="LBRTResult" Text="{Binding LBRTResult}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" IsReadOnly="True" />
                        <Button Grid.Column="2" Grid.Row="2" Name="CalcLbrt" Content="Calc" Click="{mw:Action CalcLbrt}"  Width="70"/>
                        <Label Name="Sigma" Content="Sigma" Grid.Column="0" Grid.Row="3"></Label>
                        <mw:NumberBox Name="SigmaBox" Value="{Binding Sigma}" Grid.Row="3" Grid.Column="1" DecimalPlaces="0" Minimum="0" Maximum="11" ></mw:NumberBox>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1" Name="CalcAreaCenter" Header="CalcAreaCenter">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Grid.Row ="0"  Name="CalcAreaCenterBtn" Content="Calc" Click="{mw:Action CalcAreaCenter}" Width="150" />
                        <Label Name="AreaCenterResultLbl" Content="Center" Grid.Column="0" Grid.Row="1" VerticalContentAlignment="Center"></Label>
                        <TextBox Grid.Column="1" Grid.Row="1" Name="AreaCenterResultTbx" Text="{Binding AreaCenterResult}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" IsReadOnly="True" />
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>
