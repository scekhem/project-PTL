<UserControl x:Class="MXVisionAlgorithm.Component.ImageProcess.View.ImageEmphasizeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MXVisionAlgorithm.Component.ImageProcess.View"
             mc:Ignorable="d" 
             xmlns:mw="http://www.maxwell-gp.com/"
             xmlns:control="http://www.maxwell.com/controls" xmlns:viewmodel="clr-namespace:MXVisionAlgorithm.Component.MarkLocation.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MarkLocationViewModel}"
             d:DesignWidth="1800" d:DesignHeight="1350" >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Viewbox x:Name="ImageRegion" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Margin="5">
                <control:DesignPanel Name="ImagePanel" Width="1500" Height="1300" Source="{Binding Image}"></control:DesignPanel>
            </Viewbox>

            <ScrollViewer Grid.Column="1" Grid.Row="0" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" VerticalAlignment="Center" >
                <Grid Margin="5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"></RowDefinition>
                        <RowDefinition Height="200"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0" Grid.Row="0" Header="Param">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="2*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Name="GaussSizeLabel" Content="GaussSize" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="2"></Label>
                            <Label Grid.Row="1" Grid.Column="0" Name="PowerLevelLabel" Content="PowerLevel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="2"></Label>
                            <mw:NumberBox Grid.Row="0" Grid.Column="1"  Name="GaussSizeNbx" VerticalAlignment="Center" HorizontalAlignment="Center" Value="{Binding GaussSize}"
                                          Margin="5" mw:NumericKeypadAttach.IsEnabled="True" ShowUpDownButton="True" Minimum="1" Maximum="11" DecimalPlaces="0" Increment="2" ></mw:NumberBox>
                            <mw:NumberBox Grid.Row="1" Grid.Column="1"  Name="PowerLevelNbx" VerticalAlignment="Center" HorizontalAlignment="Center" Value="{Binding PowerLevel}"
                                          Margin="5" mw:NumericKeypadAttach.IsEnabled="True" ShowUpDownButton="True" Minimum="0" Maximum="5" DecimalPlaces="0" Increment="1" ></mw:NumberBox>
                            <Button Grid.Row="2" Grid.Column="1" Name="ImageEmphasize" Content="Emphasize" Click="{mw:Action EmphasizeClick}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></Button>
                        </Grid>

                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="TransImage">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Name="SelectMultiImageLabel" Content="SelectMultiImage" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></Label>
                                <TextBox Grid.Column="1" Grid.Row="0" Name="DirTbx" Text="{Binding SelectImageName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="200" IsReadOnly="True"></TextBox>
                                <Button Grid.Column="2" Grid.Row="0" Name="SelectMultiImage" Content="..." Click="{mw:Action SelectMultiImageClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"></Button>
                            </Grid>



                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Name="SelectSavePathLabel" Content="SelectSavePathLabel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></Label>
                                <TextBox Grid.Column="1" Grid.Row="0" Name="SelectSavePathTbx" Text="{Binding SavePath}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="200" IsReadOnly="True"></TextBox>
                                <Button Grid.Column="2" Grid.Row="0" Name="SelectSavePathBtn" Content="..." Click="{mw:Action SelectSavePathClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"></Button>
                            </Grid>
                            <Button Grid.Row="2" Name="TransImage" Content="TransImage" Click="{mw:Action TransImageClick}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
