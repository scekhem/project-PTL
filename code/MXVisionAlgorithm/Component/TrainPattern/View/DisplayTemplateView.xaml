<Window x:Class="MXVisionAlgorithm.Component.TrainPattern.View.DisplayTemplateView"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:control1="clr-namespace:MwFramework.Controls.ImageViewer;assembly=MwFramework.Controls.ImageViewer"
        xmlns:mw="http://www.maxwell-gp.com/" xmlns:control="http://www.maxwell.com/controls"
        mc:Ignorable="d" 
        d:DesignHeight="400" d:DesignWidth="500"   HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        MinWidth="500" 
        MinHeight="400" 
        MaxWidth="500" 
        MaxHeight="400"
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" StateChanged="{mw:Action OnwinStateChanged}" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Menu>
            <!--<MenuItem Header="打开" FontSize="18"  Click="{mw:Action FromFile }" >
            <MenuItem.Icon>
                <Image Source="/Module.SVA;component/Resources/bmpfiles.ico" />
            </MenuItem.Icon>
        </MenuItem>-->
            <MenuItem Header="Save" FontSize="18" Click="{mw:Action Save }">
                <MenuItem.Icon>
                    <Image Source="/Module.SVA;component/Resources/SaveFile.ico" />
                </MenuItem.Icon>
            </MenuItem>
            <TextBlock Text="Template Name:" FontSize="18" IsEnabled="False" ></TextBlock>
            <mw:HitTextBox  TextType="Chinese"
                    mw:InfoElement.Necessary="True"
                    mw:InfoElement.RegexPattern="^[a-zA-Z0-9_\u4e00-\u9fa5]{1,50}$"
                    ToolTip="模板名称（中文、英文、数字、下划线组合，1-50位）" Text="{Binding FileName }" FontSize="15" IsEnabled="True" FontWeight="Bold" TextWrapping="WrapWithOverflow" Width="150">
            </mw:HitTextBox>
        </Menu>
        <Image  Grid.Row="1" Source="{Binding TemplateBmp}" Stretch="Uniform"></Image>
    </Grid>
</Window>
