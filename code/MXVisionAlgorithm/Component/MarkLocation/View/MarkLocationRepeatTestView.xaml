<UserControl x:Class="MXVisionAlgorithm.Component.MarkLocation.View.MarkLocationRepeatTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MXVisionAlgorithm.Component.MarkLocation.View"
             mc:Ignorable="d" 
             xmlns:mw="http://www.maxwell-gp.com/"
             xmlns:control="http://www.maxwell.com/controls" xmlns:viewmodel="clr-namespace:MXVisionAlgorithm.Component.MarkLocation.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MarkLocationViewModel}"
             d:DesignWidth="1800" d:DesignHeight="1350" >
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Viewbox x:Name="ImageRegion" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Margin="5">
                <control:DesignPanel Name="ImagePanel" Width="1500" Height="1300" Source="{Binding Image}"></control:DesignPanel>
            </Viewbox>

            <ScrollViewer Grid.Column="1" Grid.Row="0" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" VerticalAlignment="Center" >
                <Grid Margin="5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"></RowDefinition>
                        <RowDefinition Height="200"></RowDefinition>
                        <RowDefinition Height="500"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="20"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Column="0" Grid.Row="0" Header="TrainPattern">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Name="TrainInnerPattern" Content="TrainInnerPattern" Click="{mw:Action TrainInnerPatternClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Margin="5"></Button>
                            <Button Grid.Column="1" Name="TrainOuterPattern" Content="TrainOuterPattern" Click="{mw:Action TrainOuterPatternClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Margin="5"></Button>
                            <Button Grid.Column="2" Name="TInitPattern" Content="InitPatternClick" Click="{mw:Action InitPatternClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Margin="5"></Button>

                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="1" Header="SingleImageMatch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="2*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Name="MatchPattern" Content="Match" Click="{mw:Action MatchPatternClick}" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
                                <Button Grid.Column="1" Name="MatchPatternRepeat" Content="MatchRepeat" Click="{mw:Action MatchPatternRepeatClick}" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Name="InnerCenterLabel" Content="InnerCenter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="2"></Label>
                                <TextBox Grid.Column="1" Grid.Row="0" Name="InnerCenterTbx" Text="{Binding InnerCenter}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="200" IsReadOnly="True" Margin="5"></TextBox>
                                <Label Grid.Column="0" Grid.Row="1" Name="OuterCenterLabel" Content="OuterCenter" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Margin="2"></Label>
                                <TextBox Grid.Column="1" Grid.Row="1" Name="OuterCenterTbx" Text="{Binding OuterCenter}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="200" IsReadOnly="True" Margin="5"></TextBox>
                            </Grid>

                        </Grid>
                    </GroupBox>
                    <GroupBox Grid.Column="0" Grid.Row="2" Header="MultiImageMatch">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="60"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Name="SelectMultiImageLabel" Content="SelectMultiImage" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></Label>
                                <TextBox Grid.Column="1" Grid.Row="0" Name="DirTbx" Text="{Binding SelectImageName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="200" IsReadOnly="True"></TextBox>
                                <Button Grid.Column="2" Grid.Row="0" Name="SelectMultiImage" Content="..." Click="{mw:Action SelectMultiImageClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"></Button>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Grid.Row="0" Name="MmppxLbl" Content="mmppx" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"></Label>
                                <mw:NumberBox Grid.Column="1" Grid.Row="0" Name="MmppxTbx" VerticalAlignment="Center" HorizontalAlignment="Center" Value="{Binding Mmppx}"
                                              Margin="5" mw:NumericKeypadAttach.IsEnabled="True" ShowUpDownButton="False" Minimum="0" DecimalPlaces="9"></mw:NumberBox>
                            </Grid>

                            <Button Grid.Row="2" Name="MatchMultiImage" Content="Match" Click="{mw:Action MatchMultiImageClick}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                            <RichTextBox Grid.Row="3" Name="MatchMultiImageResult" IsReadOnly="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible" ></RichTextBox>
                            <Button Grid.Row="4" Name="ClearRichTextBox" Content="Clear" Click="{mw:Action ClearRichTextBoxClick}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                        </Grid>
                    </GroupBox>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
