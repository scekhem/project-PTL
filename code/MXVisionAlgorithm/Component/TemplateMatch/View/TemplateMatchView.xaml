<UserControl x:Class="MXVisionAlgorithm.Component.TemplateMatch.View.TemplateMatchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MXVisionAlgorithm.Component.MarkLocation.View" 
             xmlns:mw="http://www.maxwell-gp.com/"
             xmlns:control="http://www.maxwell.com/controls" xmlns:viewmodel="clr-namespace:MXVisionAlgorithm.Component.MarkLocation.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MarkLocationViewModel}"
             mc:Ignorable="d" 
             d:DesignWidth="1800" d:DesignHeight="1350" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox x:Name="ImageRegion" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Margin="5">
            <control:DesignPanel Name="ImagePanel" Width="1500" Height="1300" Source="{Binding Image}"></control:DesignPanel>
        </Viewbox>

        <ScrollViewer Grid.Column="1" Grid.Row="0" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" VerticalAlignment="Center" >
            <Grid Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="400"></RowDefinition>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" Grid.Row="0" Header="TemplateCreate">
                    <Grid Margin="4,0,6,0" >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column ="0" Margin="5" Name="TemplateType" VerticalAlignment="Center" HorizontalAlignment="Center" SelectedItem="{Binding TemplateType}">

                        </ComboBox>
                        <Button Grid.Column="1" Name="TemplateCreate" Content="TemplateCreate" Click="{mw:Action TemplateCreateClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="0" Grid.Row="1" Header="TemplateLoad">
                    <Grid Margin="4,0,6,0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" Name="TemplateLoad" Content="TemplateLoad" Click="{mw:Action TemplateLoadClick}" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"></Button>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="0" Grid.Row="2" Header="SingleImageMatch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Name="TemplateMatch" Content="Match" Click="{mw:Action TemplateMatchClick}" HorizontalAlignment="Center" VerticalAlignment="Center"></Button>
                        <Label Grid.Row="1" Name="CenterLabel" Content="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15"></Label>
                        <TextBox Grid.Row="1" Name="CenterTbx" Text="{Binding SingleImageCenterResult}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Width="290" IsReadOnly="True"></TextBox>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="0" Grid.Row="3" Header="MultiImageMatch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="70"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="60"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Name="SelectMultiImageLabel" Content="SelectMultiImage" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="15"></Label>
                        <TextBox Grid.Row="0" Name="DirTbx" Text="{Binding SelectImageName}" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" Width="290" IsReadOnly="True"></TextBox>
                        <Button Grid.Row="0" Name="SelectMultiImage" Content="..." Click="{mw:Action SelectMultiImageClick}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="30" Height="30"></Button>
                        <Button Grid.Row="1" Name="MatchMultiImage" Content="Match" Click="{mw:Action MatchMultiImageClick}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                        <RichTextBox Grid.Row="2" Name="MatchMultiImageResult" IsReadOnly="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible" ></RichTextBox>
                        <Button Grid.Row="3" Name="ClearRichTextBox" Content="Clear" Click="{mw:Action ClearRichTextBoxClick}" HorizontalAlignment="Center" VerticalAlignment="Center" ></Button>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
