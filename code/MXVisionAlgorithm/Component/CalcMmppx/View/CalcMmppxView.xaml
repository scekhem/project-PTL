<UserControl x:Class="MXVisionAlgorithm.Component.CalcMmppx.View.CalcMmppxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MXVisionAlgorithm.Component.CalcMmppx.View"
             xmlns:drawingControl="http://www.maxwell.com/controls"
             xmlns:mw="http://www.maxwell-gp.com/"
             mc:Ignorable="d" 
             d:DesignWidth="1800" d:DesignHeight="1350" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Viewbox x:Name="ImageRegion" Grid.Row="0" Grid.Column="0" Stretch="Uniform" Margin="5">
            <drawingControl:DesignPanel Name="ImagePanel" Width="1500" Height="1300" Source="{Binding Image}" Shapes="{Binding DrawRegions}"></drawingControl:DesignPanel>
        </Viewbox>

        <ScrollViewer Grid.Column="1" Grid.Row="0" Margin="5" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Center" VerticalScrollBarVisibility="Auto" VerticalAlignment="Top" >
            <Grid Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0" Name="MarkSizeGbx" Header="MarkSize"  >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Name="MarkSizeLabel" Content="MarkSize" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"></Label>
                        <mw:NumberBox Grid.Column="1" Name="MarkSizeInput" VerticalAlignment="Center" HorizontalAlignment="Center" Value="{Binding MarkSize}"
                                      Margin="5" mw:NumericKeypadAttach.IsEnabled="True" ShowUpDownButton="False" Minimum="0"></mw:NumberBox>
                        <Label Grid.Column="2" Grid.Row="0" Name="MarkSizeUnit" Content="MM" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2" ></Label>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="1" Name="AutoGetMarkSize" Header="AutoCalculate">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Name="AutoCalcMmppx" Content="AutoCalcMmppx" Click="{mw:Action AutoCalcMmppx}" Margin="5" Width="150"></Button>
                        <TextBox Grid.Column="0" Grid.Row="1" Name="DistPixel" Text="{Binding DistPixel}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="150" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="1" Grid.Row="1" Name="PixelUnit" Content="DistPixel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"></Label>
                        <TextBox Grid.Column="0" Grid.Row="2" Name="Mmppx" Text="{Binding ImageMmppx}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="150" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="1" Grid.Row="2" Name="MmppxUnit" Content="Mmppx" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"></Label>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Row="2" Name="ManualGetMarkSize" Header="ManualCalculate">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Name="ManualCalcMmppx" Content="ManualCalcMmppx" Click="{mw:Action ManualCalcMmppx}" Margin="5" Width="150"></Button>
                        <TextBox Grid.Column="0" Grid.Row="1" Name="ManualDistPixel" Text="{Binding ManualDistPixel}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="150" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="1" Grid.Row="1" Name="ManualPixelUnit" Content="DistPixel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"></Label>
                        <TextBox Grid.Column="0" Grid.Row="2" Name="ManualMmppx" Text="{Binding ManualImageMmppx}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Width="150" IsReadOnly="True"></TextBox>
                        <Label Grid.Column="1" Grid.Row="2" Name="ManualMmppxUnit" Content="Mmppx" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"></Label>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

    </Grid>
</UserControl>
